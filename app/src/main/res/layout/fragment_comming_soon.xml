<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.js.android.betmanagement.fragments.CommingSoonFragment"
    android:rowCount="3"
    android:columnCount="3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wird in späteren Versionen der App unterstützt"
        android:id="@+id/textView_under_construct"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_under_construct"
        android:layout_above="@+id/textView_under_construct"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_action_warning"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>
